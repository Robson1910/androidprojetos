<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.example.wazesupermarket.wazesupermarket.MainActivity">


    <LinearLayout
        android:id="@+id/login_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageid"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />


        <Button
            android:id="@+id/pesquisar"
            style="?android:textAppearanceSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#303f9f"
            android:padding="10dp"
            android:text="Pesquisar produto"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/cadastrar"
            style="?android:textAppearanceSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#303f9f"
            android:padding="10dp"
            android:text="cadastrar produto"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />


        <Button
            android:id="@+id/sair"
            style="?android:textAppearanceSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#303f9f"
            android:padding="10dp"
            android:text="Sair"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/image_profile_picture"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/logos" />

    <ImageView
        android:id="@+id/imageid"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image_profile_picture"
        android:layout_centerHorizontal="true"
        android:background="@drawable/carrinho" />

</RelativeLayout>
