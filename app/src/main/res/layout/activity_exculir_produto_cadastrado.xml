<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context="com.example.wazesupermarket.wazesupermarket.exculirProdutoCadastradoActivity">

<TextView
    android:id="@+id/textViewListaExcluir"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="Excluir Produtos"
    android:textColor="@android:color/background_dark"
    android:textSize="24sp"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Produtos cadastrado pela sua conta"
        android:textColor="@android:color/black" />


<ListView
    android:id="@+id/listViewProdutosExcluir"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top"
    android:layout_marginTop="10dp"
    android:divider="@color/colorPrimary"
    android:dividerHeight="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" />

</LinearLayout>